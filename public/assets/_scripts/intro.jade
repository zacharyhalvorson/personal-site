script(type="text/javascript").

    var $input = $(".c-intro-text");
    var $supporting = $(".c-supporting-text");
    var $face = $(".c-intro-face");
    var $typingIndicator = $(".typing-indicator");
    
    var typeMessages = function() {
        
        function showHello() {
            $input.removeClass("u-hide").addClass("u-show a-fade-scale");
        }
        function showFace() {
            $face.removeClass("u-hide").addClass("u-show a-fade-scale");
        }
        function showSupporting() {
            $supporting.removeClass("u-hide").addClass("u-show a-fade-scale");
        }
        function hideTypingIndicator() {
            $typingIndicator.addClass("u-hide");
        }
        function showTypingIndicator() {
            $typingIndicator.removeClass("u-hide").addClass("u-show a-fade-scale");
        }
        
        window.setTimeout(showHello, 2000);
        window.setTimeout(hideTypingIndicator, 2000);    
        window.setTimeout(showTypingIndicator, 2500);
        window.setTimeout(showFace, 4000);
        window.setTimeout(hideTypingIndicator, 4000);
        window.setTimeout(showTypingIndicator, 4500);
        window.setTimeout(showSupporting, 5800);
        window.setTimeout(hideTypingIndicator, 5800);
        
    }
    
    
    window.onload = function() {
        typeMessages();
    };
