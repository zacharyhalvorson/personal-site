doctype
html
    != partial('_partials/head')
    body
        
        header(role='banner')
            .logo: a(href='/')
                img(src='/img/logo.svg')
                
            nav(role='navigation'): ul
                li: a(href='/' class='is-underlined-bold #{ current.source != "about" ? "current" : "" }') Work
                li: a(href='/about' class='is-underlined-bold #{ current.source === "about" ? "current" : "" }') About
            
            h1 <strong>Zachary Halvorson</strong> is an interaction designer working on the web and iOS.

        main(class='#{ bodyClass ? bodyClass : "project"}', role="main")

            != yield
            
        if current.source != "about" || "index"
            != partial('_partials/paginator')
        
        footer(role='contentinfo'): != partial('_partials/footer')
    
        script(src='//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js')
        script(src='//cdn.mobify.com/modules/scooch/0.3.3/scooch.min.js')
        script(src='/js/app.js')
        script(src='/js/rainbow.js')
    
