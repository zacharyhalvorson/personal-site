//
// About Page Styles
//

main.about
    padding: 2.222222222rem 0
    group()
    border-top-bottom()

    p .is-underlined-bold
        color: font-color
        font-weight: fontRegular

    .is-left
        padding-left: 25%
        img
            width: 6rem

    .is-right
        padding-left: .555555556rem

    @media all and (max-width: columnBreak)
        padding-top: 1.111111111rem

        .profile-picture
            margin-bottom: 1.111111111rem

        .is-left,
        .is-right
            padding: 0
