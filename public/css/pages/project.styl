//
// Project Page Styling
//

headerBreak = 27.5rem

.project
    margin-top: 2.222222222rem
    group()
    +below(headerBreak)
        margin-top: 1.111111111rem
        padding-top: 1.111111111rem
        border-top()

    header
        padding-left: 25%
        +below(headerBreak)
            padding-left: 0
            margin-bottom: 1.111111111rem

    h2, h3
        font-weight: fontRegular

    .projectName
        margin-bottom: .555555556rem

    .contHeader
        position: relative
        h3
            position: absolute
            top: 0
            left: -50%
            max-width: 9rem

    ul li
        font-size: .888888889rem
        list-style: square inside none
        color: grey2

    .is-underlined-bold
        color: font-color
        font-weight: fontRegular
