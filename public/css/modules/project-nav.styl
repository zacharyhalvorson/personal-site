.project-nav
    border-top()
    margin-top: 1.111111111rem
    padding: 1.111111111rem 0
    min-width: 100%
    group()
    @media all and (min-width: headerBreak)
        padding-bottom: .555555556rem

    .next,
    .prev
        p
            margin: .555555556rem 0
            &:first-child
                margin-top: 0
                font-weight: fontRegular
                color: font-color
            &:last-child
                margin-bottom: 0

    .next
        float: right
        text-align: right

    .prev
        float: left
