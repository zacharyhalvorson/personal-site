@import '_nib'
@import 'rupture'
@import 'mixins/*'
@import 'pages/*'
@import 'modules/*'

// Set default text styles
normalize-css()
base()
reset-headers()

::selection
    background: green

body
    max-width: 800px
    padding: 0 1.111111111rem
    margin: 0 auto

a
    color: link-color

p:first-child
    margin-top: 0

strong
    font-weight: fontRegular

ul
    reset-list()

// Modifier Classes

.is-left,
.is-right
    float: left
    width: 50%
    group()


.is-underlined
    text-decoration: none
    position: relative
    &:after
        transition()
        content: ''
        display: block
        background: orange
        height: 2px
        width: 100%
        position: absolute
        bottom: 1px
        opacity: 0
    &:hover
        &:after
            transform: translateY(2px)
            opacity: 1
