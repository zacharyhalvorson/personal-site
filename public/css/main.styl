@import 'normalize'
@import 'normalize-opentype'
@import 'rupture'
@import 'mixins/*'
@import 'pages/*'
@import 'modules/*'

headerBreak = 27.5rem

normalize-css()
base()
reset-headers()

::selection
    background: green

body
    max-width: 800px
    padding: 0 1.111111111rem
    margin: 0 auto

a
    color: link-color
    text-decoration: none
    position: relative

p:first-child
    margin-top: 0

strong
    font-weight: fontRegular

ul
    reset-list()

// Modifier Classes

.is-left,
.is-right
    +above(headerBreak)
        float: left
        width: 50%
        group()


.is-underlined-bold
    text-decoration: none
    position: relative
    &:after
        transition()
        content: ''
        display: block
        background: red
        height: 1px
        width: 100%
        position: absolute
        bottom: 1px
        opacity: 0
    &:hover
        &:after
            transform: translateY(2px)
            opacity: 1

.is-underlined
    transition()
    &:hover
        color: red
        &::after
        // This looks like crap in chrome, needs to be fixed
            // transform: translateY(-.1rem)
            // opacity: 0
    &::after
        transition()
        content: ""
        width: 100%
        height: 1px
        opacity: 1
        border-bottom: 1px link-color solid
        position: absolute
        bottom: -1px
        left: 0
        transform: scaleY(0.5)
