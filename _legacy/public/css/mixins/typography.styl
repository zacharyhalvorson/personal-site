// Set base font family and size
base(fonts=font-stack, size=font-size, color=font-color, weight=font-weight)
  html
    font-size: unit(size, 'px')
    font-size: unit((size/16)*100, "%")

  body
    font-family: fonts
    font-weight: weight
    color: color
    -webkit-font-smoothing: antialiased
    -webkit-text-size-adjust: 100%
    -ms-text-size-adjust: 100%
    font-size-adjust: auto

// Reset default properties of a list
reset-list()
  margin: 0
  padding: 0

  li
    float: none
    list-style-type: none
    padding: 0
    margin: 0

reset-headers()
    h1, h2, h3, h4, h5, h6
        font-family: font-stack
        font-weight: font-weight
        font-size: unit(font-size, 'px')
        margin: 0
        padding: 0
